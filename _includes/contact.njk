{% from "macros.njk" import title %}
<div class="section" id="contact">
    <div class="container">
        <div class="map">
            <div class="map-tab">
                <ul>
                    <li class="streetmap active"><a href="#">Localização</a></li>
                    <li class="sattelite"><a href="#">Imagem aérea</a></li>
                </ul>
            </div>
            <div class="map-content">
                <ul>
                    <li class="streetmap active"></li>
                    <li class="sattelite"></li>
                </ul>
            </div>
        </div>
        <div class="contact">
            {{ title("Contato") }}
            <div class="info">
                <div class="phone" style="background: url('data:image/svg+xml;base64,{{ '/icons/phone.svg' | svgContents | safe | base64 }}') no-repeat, url('data:image/svg+xml;base64,{{ '/icons/whatsapp.svg' | svgContents | safe | base64 }}') no-repeat 30px 0;">{{ info.phone }}</div>
                <div class="email" style="background: url('data:image/svg+xml;base64,{{ '/icons/email.svg' | svgContents | safe | base64 }}') no-repeat 30px center/25px;">{{ info.email }}</div>
            </div>
        </div>
    </div>
</div>